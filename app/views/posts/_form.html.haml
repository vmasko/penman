= form_for @post do |f|
  = f.label :title
  = f.text_field :title, class: 'form-control'

  = f.label :content
  = f.text_area :content, rows: 15, class: 'form-control'

  = f.label :category_list, 'Categories'
  = f.text_field :category_list, class: 'form-control'

  = f.submit "Post!", class: 'btn btn-primary'
